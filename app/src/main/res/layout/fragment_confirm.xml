<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.confirm.ConfirmFragment" >


    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="267dp"
        android:layout_height="171dp"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
   
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/add4"
        android:layout_width="101dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/addImageButton"
        android:gravity="center"
        android:text="Upload image"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/foodName"
        android:layout_width="379dp"
        android:layout_height="40dp"
        android:layout_below="@+id/addImageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="Enter food name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/foodDescription"
        android:layout_width="382dp"
        android:layout_height="80dp"
        android:layout_below="@+id/foodName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter food description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/quantityText"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Enter quantity"
        android:inputType="textPersonName" />


    <TextView
        android:id="@+id/quantityText2"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantityText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="tap on your location (default current location)"
        android:textSize="12dp" />

    <fragment
        android:id="@+id/mapView2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="393dp"
        android:layout_height="258dp"

        android:layout_below="@+id/quantityText2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="7dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editTextDate2"
        android:layout_alignParentStart="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="Submit" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="391dp"
        android:layout_height="62dp"
        android:layout_below="@+id/mapView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:hint="Enter Expiry Date"
        android:inputType="date" />

</RelativeLayout>