<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.orders.OrdersFragment" >


    <TextView
        android:id="@+id/titleText"
        android:layout_width="377dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleQty"
        android:layout_width="238dp"
        android:layout_height="37dp"
        android:layout_below="@+id/titleText"
        android:layout_marginStart="9dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/MainImage"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titleStatus"
        android:layout_width="238dp"
        android:layout_height="34dp"
        android:layout_below="@+id/titleExpiry4"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/MainImage"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/titleExpiry4"
        android:layout_width="235dp"
        android:layout_height="37dp"
        android:layout_below="@+id/titleQty"
        android:layout_marginStart="9dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/MainImage"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/pickUpLocation"
        android:layout_width="229dp"
        android:layout_height="25dp"
        android:layout_below="@+id/MainImage"
        android:layout_marginStart="-93dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/MainImage"
        android:text="Pick Up Location"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/MainImage"
        android:layout_width="155dp"
        android:layout_height="158dp"
        android:layout_below="@+id/titleText"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:src="@drawable/apple" />

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_below="@+id/pickUpLocation"
        android:layout_marginTop="2dp" />

    <Button
        android:id="@+id/orderButton"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:text="Accept donation request" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/grey"
        android:text="Item has reached receiver!" />

    <Button
        android:id="@+id/reception"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/green"
        android:text="Confirm Reception" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true"
        android:layout_marginStart="299dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="@color/red"
        android:text="Cancel" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"

        android:text="Description
" />

    <TextView
        android:id="@+id/description"
        android:layout_width="397dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="4dp"
        android:text="Description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:text="contact"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="117dp"
        android:layout_height="56dp"
        android:layout_below="@+id/description"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/contact"
        android:background="?android:attr/colorPressedHighlight"
        android:gravity="center"
        android:src="@drawable/ic_baseline_message_24" />
</RelativeLayout>