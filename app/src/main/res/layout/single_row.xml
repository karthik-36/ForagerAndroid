<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wholeRow"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/image_rounded"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="Large Text"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/expiryText"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#F44D4D" />

    <TextView
        android:id="@+id/expiryText3"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_weight="1"
        android:text="Expiry:"
        android:textAlignment="textStart"
        android:textColor="#F44D4D" />

    <TextView
        android:id="@+id/miles"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/expiryText"
        android:layout_weight="1"
        android:text="Metric"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/miles2"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/expiryText"
        android:layout_weight="1"
        android:text="Distance:"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/donorText"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/miles"
        android:text="Donor Name"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/donorText2"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/miles"
        android:text="Donor:"
        android:textAlignment="textStart" />

    <ImageButton
        android:id="@+id/details"
        android:layout_width="48dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/itemName"
        android:background="@drawable/bs"
        android:gravity="center" />


</RelativeLayout>