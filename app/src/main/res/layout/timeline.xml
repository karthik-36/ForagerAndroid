<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wholeRow"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="39dp"
        android:text="TextView"
        android:textAlignment="center" />


    <View
        android:layout_width="4dp"
        android:layout_height="110dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/date"
        android:background="#777777" />

    <View
        android:translationZ="1dp"
        android:layout_width="12dp"
        android:layout_height="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/date"
        android:background="@android:color/holo_blue_bright"
        android:paddingLeft="4dp"
        android:rotation="180" />

    <ImageView
        android:id="@+id/backgroundHolder"
        android:layout_width="307dp"
        android:layout_height="82dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/date"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/greenbtn" />

    <ImageView
        android:id="@+id/incomingOutgoing"
        android:layout_width="53dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/backgroundHolder"
        android:layout_marginStart="7dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="65dp"
        android:layout_height="69dp"
        android:background="@drawable/image_border"
        android:layout_alignStart="@+id/incomingOutgoing"
        android:layout_marginStart="58dp"
        android:layout_marginTop="22dp"

        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="166dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/foodImage"
        android:background="@drawable/border"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expiryText"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/foodImage"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/danger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_marginStart="-122dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/foodImage"
        android:text="TextView"
        android:shadowColor="@color/black"
        android:shadowDx="-2"
        android:shadowDy="-2"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/donorName"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/expiryText"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>